<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.mytestapplication.memo.data.MemoDetailData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvMemoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvMemoTitle"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvMemoCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.category}"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/tvCategory"
            app:layout_constraintStart_toEndOf="@id/tvCategory"
            app:layout_constraintBottom_toBottomOf="@id/tvCategory"
            />

        <TextView
            android:id="@+id/tvContents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="메모"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvCategory"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/tvMemoContents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{data.contents}"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvContents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>